{
  "name": "template",
  "version": "1.0.0",
  "description": "template",
  "main": "./dist/main.js",
  "license": "MIT",
  "author": "Tulev Andrey",
  "scripts": {
    "init": "yarn && cd ./frontend && yarn",
    "build": "tsc && cd ./frontend && yarn build",
    "app:win": "electron-builder --win",
    "app:linux": "electron-builder --linux",
    "app:mac": "electron-builder --mac",
    "watch": "nodemon --exec \"tsc && wait-on tcp:9090 && electron .\"",
    "start": "concurrently -k \"cd ./frontend && yarn dev\" \"yarn watch\""
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "dotenv": "^16.4.1",
    "electron": "^28.2.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "nodemon": "^2.0.20",
    "typescript": "^5.3.3",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "ts-node": "^10.9.2"
  },
  "permissions": {
    "desktopCapture": true
  },
  "build": {
    "asar": false,
    "appId": "com.official-electron-vue.app",
    "productName": "Electron Vue",
    "copyright": "Copyright Â© 2022 ${author}",
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      "defaults/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "app"
    }
  }
}
